<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.0" client="site" method="upgrade">
	<name>mod_guru_menus</name>
	<author>iJoomla</author>
	<creationDate>April 21, 2016</creationDate>
	<copyright>(C) 2015 iJoomla.com</copyright>
	<license>GPL V2</license>
	<authorUrl>www.ijoomla.com</authorUrl>
	<authorEmail>webmaster2@ijoomla.com</authorEmail>
	<version>2.0.0</version>
	<description>This module displays all Guru categories.</description>
	
	<languages>
		<language tag="en-GB">en-GB.mod_guru_menus.ini</language>
		<language tag="en-GB">en-GB.mod_guru_menus.sys.ini</language>
	</languages>
	
	<files>
		<filename module="mod_guru_menus">mod_guru_menus.php</filename>
        <filename>index.html</filename>
        <filename>helper.php</filename>
		<filename>guru_menus.js</filename>
		<filename>guru_menus.css</filename>
        <filename>tmpl/default.php</filename>
        <filename>tmpl/index.html</filename>
    </files>
	
	<config>
		<fields name="params">
			<fieldset name="basic" label="COM_MODULES_BASIC_FIELDSET_LABEL">
				<field name="show_courses" type="radio" class="btn-group" default="0" label="MOD_GURU_SHOW_COURSES" description="">
					<option value="0">MOD_NO</option>
					<option value="1">MOD_YES</option>
				</field>
			</fieldset>
			
			<fieldset name="advanced">
				<field name="moduleclass_sfx" type="text" label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL" description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
			</fieldset>
		</fields>
	</config>
</extension>