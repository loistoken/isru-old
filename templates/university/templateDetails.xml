<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 2.5//DTD template 1.0//EN" "https://www.joomla.org/xml/dtd/2.5/template-install.dtd">
<extension version="3.1" type="template" client="site">
	<name>university</name>
	<version>1.0</version>
	<creationDate>1397/02/16</creationDate>
	<author>Khashayar Pouradabi</author>
	<authorEmail>pouradabi@hostiran.com</authorEmail>
	<copyright>Copyright (C) 2005 - 2018 Open Source Matters, Inc. All rights reserved.</copyright>
	<files>
		<filename>component.php</filename>
		<filename>error.php</filename>
		<filename>offline.php</filename>
		<filename>index.php</filename>
		<filename>templateDetails.xml</filename>
		<filename>template_preview.png</filename>
		<folder>css</folder>
		<folder>fonts</folder>
		<folder>img</folder>
		<folder>js</folder>
		<folder>language</folder>
		<folder>less</folder>
	</files>
	<positions>
		<position>slideshow</position>
		<position>ti</position>
		<position>to</position>
		<position>bi</position>
		<position>bo</position>
		<position>parallax</position>
		<position>offcanvas</position>
		<position>heading</position>
		<position>right</position>
		<position>left</position>
		<position>footer</position>
	</positions>
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.tpl_university.ini</language>
		<language tag="en-GB">en-GB/en-GB.tpl_university.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="logo" type="media" label="TPL_UNI_LOGO_LABEL" />
				<field name="socials" type="repeatable" icon="list" label="Socials">
					<fieldset hidden="true" name="slides" repeat="true">
						<field name="icon" class="width-100" type="text" label="Icon" />
						<field name="link" type="text" label="URL" />
						<field name="title" type="text" label="Title" />
					</fieldset>
				</field>
			</fieldset>
			<fieldset name="contact">
				<field name="address" rows="5" type="textarea" label="Address" />
				<field name="phone" type="text" label="Phone" />
				<field name="fax" type="text" label="Fax" />
				<field name="email" type="text" label="Email" />
				<field name="location" type="text" label="Map" />
			</fieldset>
		</fields>
	</config>
</extension>